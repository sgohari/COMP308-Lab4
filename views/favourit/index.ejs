<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Favourite Vehicle</th>
                    <th class="text-center">Favourite Sport</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < favouriteList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= favouriteList[count].FirstName %></td>
                        <td class="text-center"><%= favouriteList[count].LastName %></td>
                        <td class="text-center"><%= favouriteList[count].FavouritCar %></td>
                        <td class="text-center"><%= favouriteList[count].FavouritSport %></td>
                    </tr>
                <% } %>
            </table>

        </div>
    </div>
</div>
 <% include ../partials/footer.ejs %>